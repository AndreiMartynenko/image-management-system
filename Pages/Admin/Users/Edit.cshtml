@page "/Admin/Users/Edit/{id}"
@namespace HealthcareIMS.Pages.Admin.Users
@model EditModel

<h2>Edit User</h2>

<div asp-validation-summary="All" class="text-danger"></div>

@if (Model.UserData == null)
{
    <div class="alert alert-danger">User not found.</div>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="UserData.Id" />
        <div class="mb-3">
            <label asp-for="UserData.UserName" class="form-label"></label>
            <input asp-for="UserData.UserName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserData.Email" class="form-label"></label>
            <input asp-for="UserData.Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserData.PhoneNumber" class="form-label"></label>
            <input asp-for="UserData.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserData.FirstName" class="form-label"></label>
            <input asp-for="UserData.FirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserData.LastName" class="form-label"></label>
            <input asp-for="UserData.LastName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserData.DateOfBirth" class="form-label"></label>
            <input asp-for="UserData.DateOfBirth" type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserData.Gender" class="form-label"></label>
            <input asp-for="UserData.Gender" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserData.Address" class="form-label"></label>
            <textarea asp-for="UserData.Address" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="UserData.Status" class="form-label"></label>
            <input asp-for="UserData.Status" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">New Password (optional)</label>
            <input type="password" asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Admin/Users/Index" class="btn btn-secondary">Back</a>
    </form>
}
