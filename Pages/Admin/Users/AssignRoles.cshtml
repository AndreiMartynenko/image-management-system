@page "/Admin/Users/AssignRoles/{id}"
@namespace HealthcareIMS.Pages.Admin.Users
@model AssignRolesModel

<h2>Assign Roles to @Model.UserData.UserName</h2>

<div asp-validation-summary="All" class="text-danger"></div>

@if (Model.AllRoles != null)
{
    <form method="post">
        <input type="hidden" asp-for="UserData.Id" />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Role</th>
                    <th>Has this role?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.AllRoles)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <input type="checkbox" name="SelectedRoles"
                                   value="@role.Name"
                            @(Model.SelectedRoles.Contains(role.Name) ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Roles</button>
        <a asp-page="/Admin/Users/Index" class="btn btn-secondary">Back</a>
    </form>
}
