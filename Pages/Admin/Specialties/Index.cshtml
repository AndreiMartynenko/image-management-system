@page "/Admin/Specialties/Index"
@using HealthcareIMS.Models
@namespace HealthcareIMS.Pages.Admin.Specialties
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel

@{
    ViewData["Title"] = "Manage Specialties";
}

<h2>Specialties</h2>

<a href="/Admin/Specialties/Create" class="btn btn-primary mb-3">Create New</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>IsActive</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SpecialtyList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-page="/Admin/Specialties/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="/Admin/Specialties/Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
