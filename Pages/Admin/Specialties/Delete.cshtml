@page "/Admin/Specialties/Delete/{id:int}"
@using HealthcareIMS.Models
@namespace HealthcareIMS.Pages.Admin.Specialties
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DeleteModel

@{
    ViewData["Title"] = "Delete Specialty";
}

<h2>Delete Specialty</h2>

<h4>Are you sure you want to delete this specialty?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.SpecialtyData.Name</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.SpecialtyData.Description</dd>
</dl>

<form method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Admin/Specialties/Index" class="btn btn-secondary">Cancel</a>
</form>
