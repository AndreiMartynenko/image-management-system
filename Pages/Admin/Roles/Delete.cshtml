@page "/Admin/Roles/Delete/{id}"
@namespace HealthcareIMS.Pages.Admin.Roles
@model DeleteModel

<h2>Delete Role</h2>

@if (Model.RoleData == null)
{
    <div class="alert alert-danger">Role not found.</div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.RoleData.Name</dd>
    </dl>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Admin/Roles/Index" class="btn btn-secondary">Cancel</a>
    </form>
}
