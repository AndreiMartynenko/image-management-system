@page "/Admin/ServiceDefinitions/Index"
@using HealthcareIMS.Models
@namespace HealthcareIMS.Pages.Admin.ServiceDefinitions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel

@{
    ViewData["Title"] = "Manage Service Definitions";
}

<h2>Service Definitions</h2>

<a href="/Admin/ServiceDefinitions/Create" class="btn btn-primary mb-3">Create New</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>DefaultCost</th>
            <th>IsActive</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ServiceDefinitionList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.DefaultCost</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-page="/Admin/ServiceDefinitions/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="/Admin/ServiceDefinitions/Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
