@page "/Admin/ServiceDefinitions/Delete/{id:int}"
@using HealthcareIMS.Models
@namespace HealthcareIMS.Pages.Admin.ServiceDefinitions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DeleteModel

@{
    ViewData["Title"] = "Delete Service Definition";
}

<h2>Delete Service Definition</h2>

<h4>Are you sure you want to delete this service definition?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.ServiceDef.Name</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.ServiceDef.Category</dd>

    <dt class="col-sm-2">DefaultCost</dt>
    <dd class="col-sm-10">@Model.ServiceDef.DefaultCost</dd>
</dl>

<form method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Admin/ServiceDefinitions/Index" class="btn btn-secondary">Cancel</a>
</form>
