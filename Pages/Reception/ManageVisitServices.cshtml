@page "/Reception/ManageVisitServices"
@model ManageVisitServicesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Manage Visit & Services</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<!-- بخش جستجوی بیمار -->
<form method="post" asp-page-handler="SearchPatient" class="mb-3">
    <input type="hidden" asp-antiforgery="true" />
    <div class="mb-3">
        <label>Search Patient (by name or ID)</label>
        <input asp-for="SearchTerm" class="form-control" placeholder="Type name or ID" />
    </div>
    <button type="submit" class="btn btn-secondary">Search Patient</button>
</form>

@if (Model.FoundPatients != null && Model.FoundPatients.Any())
{
    <ul class="list-group mt-3">
        @foreach (var fp in Model.FoundPatients)
        {
            <li class="list-group-item">
                @fp.Id - @fp.User.FirstName @fp.User.LastName

                <form method="post" class="d-inline">
                    <input type="hidden" asp-antiforgery="true" />
                    <input type="hidden" name="patientId" value="@fp.Id" />
                    <button type="submit" asp-page-handler="SelectPatient" class="btn btn-sm btn-link">Select</button>
                </form>
            </li>
        }
    </ul>
}

<hr />

@if (Model.SelectedPatient != null)
{
    <h4>
        Selected Patient:
        @Model.SelectedPatient.User.FirstName @Model.SelectedPatient.User.LastName
        (ID=@Model.SelectedPatient.Id)
    </h4>
}

@if (Model.SelectedPatient != null)
{
    <form method="post" asp-page-handler="AddService" class="border p-3 mb-3">
        <input type="hidden" asp-antiforgery="true" />
        <input type="hidden" asp-for="OpenVisitId" />
        <input type="hidden" asp-for="PatientId" />

        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Department (Category)</label>
                <select asp-for="SelectedCategory" class="form-select"
                        onchange="this.form.submit()">
                    <option value="">-- Select Department --</option>
                    @foreach (var cat in Model.AllCategories)
                    {
                        <option value="@cat" selected="@(cat == Model.SelectedCategory)">
                            @cat
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Service Definition</label>
                <select asp-for="SelectedServiceDefinitionId" class="form-select">
                    <option value="">-- Select Service --</option>
                    @if (Model.FilteredServiceDefinitions != null)
                    {
                        foreach (var sd in Model.FilteredServiceDefinitions)
                        {
                            <option value="@sd.Id">@sd.Name (@sd.DefaultCost)</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Doctor (optional)</label>
                <select asp-for="SelectedDoctorId" class="form-select">
                    <option value="0">-- No Specific Doctor --</option>
                    @foreach (var d in Model.Doctors)
                    {
                        <option value="@d.Id">
                            @(d.User.FirstName) @(d.User.LastName)
                            (Spec: @d.Specialization)
                        </option>
                    }
                </select>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Add Service</button>
        </div>
    </form>
}

@if (Model.ServicesOfVisit != null && Model.ServicesOfVisit.Any())
{
    <hr />
    <h5>Services in this Visit:</h5>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Service Name</th>
                <th>Cost</th>
                <th>Status</th>
                <th>Doctor</th>
                <th>Service Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int rowNumber = 1;
            }
            @foreach (var s in Model.ServicesOfVisit)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@s.ServiceName (@s.ServiceCategory)</td>
                    <td>@s.ServiceCost</td>
                    <td>@s.ServiceStatus</td>
                    <td>
                        @if (s.DoctorId == null)
                        {
                            <text>All Doctors</text>
                        }
                        else
                        {
                            <text>@(s.Doctor?.User?.FirstName) @(s.Doctor?.User?.LastName)</text>
                        }
                    </td>
                    <td>@s.ServiceDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-page="/Services/ServiceDetails" asp-route-id="@s.Id" class="btn btn-info btn-sm">
                            Details
                        </a>
                        <form method="post" class="d-inline ms-1">
                            <input type="hidden" asp-antiforgery="true" />
                            <input type="hidden" asp-for="OpenVisitId" />
                            <input type="hidden" asp-for="PatientId" />
                            <input type="hidden" name="serviceId" value="@s.Id" />
                            <button type="submit" asp-page-handler="RemoveService" class="btn btn-danger btn-sm">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>

    <a asp-page="/Reception/Index" class="btn btn-secondary">Back</a>
}
