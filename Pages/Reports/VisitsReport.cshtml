@page
@model HealthcareIMS.Pages.Reports.VisitsReportModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h2>Visits Report</h2>

    <!-- فیلتر بر اساس بازه تاریخی -->
    <form method="get" class="row g-3 mb-3">
        <div class="col-auto">
            <label>Start Date:</label>
            <input type="date" asp-for="StartDate" class="form-control" />
        </div>
        <div class="col-auto">
            <label>End Date:</label>
            <input type="date" asp-for="EndDate" class="form-control" />
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Visit ID</th>
                <th>Patient Name</th>
                <th>Visit Date</th>
                <th>Visit Status</th>
                <th>Total Cost</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Visits != null)
            {
                @foreach (var visit in Model.Visits)
                {
                    <tr>
                        <td>@visit.Id</td>
                        <td>@(visit.Patient?.User?.FirstName) @(visit.Patient?.User?.LastName)</td>
                        <td>@visit.VisitDate</td>
                        <td>@visit.VisitStatus</td>
                        <td>@visit.TotalCost</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
