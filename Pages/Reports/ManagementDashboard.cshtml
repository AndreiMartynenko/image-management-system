@page
@model HealthcareIMS.Pages.Reports.ManagementDashboardModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h2>Management Dashboard</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="card text-center mb-3">
                <div class="card-header bg-primary text-white">
                    Total Visits
                </div>
                <div class="card-body">
                    <h3>@Model.TotalVisits</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center mb-3">
                <div class="card-header bg-success text-white">
                    Total Revenue
                </div>
                <div class="card-body">
                    <h3>@Model.TotalRevenue</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center mb-3">
                <div class="card-header bg-warning">
                    Unpaid Invoices
                </div>
                <div class="card-body">
                    <h3>@Model.UnpaidInvoicesCount</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center mb-3">
                <div class="card-header bg-secondary text-white">
                    Total Patients
                </div>
                <div class="card-body">
                    <h3>@Model.TotalPatients</h3>
                </div>
            </div>
        </div>
    </div>
</div>
