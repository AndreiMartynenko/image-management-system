@page
@model HealthcareIMS.Pages.Radiologist.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h2>Radiologist Dashboard</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Service ID</th>
                <th>Patient</th>
                <th>Service Name</th>
                <th>Status</th>
                <th>Doctor</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.RadServices)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@(s.Patient?.User?.FirstName) @(s.Patient?.User?.LastName)</td>
                    <td>@(s.ServiceName) (@s.ServiceCategory)</td>
                    <td>@s.ServiceStatus</td>
                    <td>@(s.Doctor?.User?.FirstName) @(s.Doctor?.User?.LastName)</td>
                    <td>@s.ServiceDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-page="/Radiologist/ServiceDetails" asp-route-serviceId="@s.Id" class="btn btn-primary btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
