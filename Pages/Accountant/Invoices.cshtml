@page
@model HealthcareIMS.Pages.Accountant.InvoicesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Invoices</h2>

<!-- فرم جست‌وجو -->
<form method="get" class="mb-3">
    <input type="text" name="SearchTerm" placeholder="Search invoices..."
           value="@Model.SearchTerm" class="form-control" />
    <button type="submit" class="btn btn-secondary mt-2">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Visit ID</th>
            <th>Patient Name</th>
            <th>Total Amount</th>
            <th>Paid Amount</th>
            <th>Payment Status</th>
            <th>Issued Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model.Invoices)
        {
            <tr>
                <td>@invoice.Id</td>
                <td>@invoice.VisitId</td>
                <td>
                    <!-- نمایش نام بیمار -->
                    @(invoice.Visit?.Patient?.User?.FirstName) @(invoice.Visit?.Patient?.User?.LastName)
                </td>
                <td>@invoice.TotalAmount</td>
                <td>@invoice.PaidAmount</td>
                <td>@invoice.PaymentStatus</td>
                <td>@invoice.IssuedDate</td>
                <td>
                    <!-- لینک جزئیات: اینجا باید دقیقاً با فایل InvoiceDetails.cshtml یکی باشد -->
                    <a asp-page="./InvoiceDetails" asp-route-id="@invoice.Id" class="btn btn-primary btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
