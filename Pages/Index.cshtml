@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="ims-card p-4">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h1 class="mb-2">Aurora Healthcare IMS</h1>
            <p class="ims-muted mb-4">
                A role-based Image Management System prototype for managing visits, services, imaging workflow, and billing.
            </p>

            @if (User?.Identity?.IsAuthenticated == true)
            {
                <div class="d-flex flex-wrap gap-2">
                    @if (User.IsInRole("Admin") || User.IsInRole("Reception") || User.IsInRole("Doctor") || User.IsInRole("Radiologist") || User.IsInRole("Accountant"))
                    {
                        <a asp-page="/Reports/Index" class="btn btn-primary">Open Reports</a>
                    }
                    <a asp-area="Identity" asp-page="/Account/Manage" class="btn btn-outline-light">Profile</a>
                </div>
            }
            else
            {
                <div class="d-flex flex-wrap gap-2">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light">Register</a>
                </div>
            }
        </div>
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="ims-card p-3">
                <div class="ims-muted small mb-2">Core modules</div>
                <div class="d-grid gap-2">
                    <div class="d-flex justify-content-between">
                        <span>Visits & Services</span>
                        <span class="ims-muted">Reception</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Imaging Upload & Diagnosis</span>
                        <span class="ims-muted">Radiologist</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Clinical Notes</span>
                        <span class="ims-muted">Doctor</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Invoices & Payments</span>
                        <span class="ims-muted">Accountant</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
